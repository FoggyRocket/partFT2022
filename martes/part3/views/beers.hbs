    <div class="uk-child-width-1-3 uk-margin-medium-top uk-grid-match" uk-grid>
        {{#each beers}}
            {{!-- this {...} --}}
            <div>
                <div class="uk-card uk-card-default">
                    <div class="uk-card-media-top">
                        <img src="{{image_url}}" alt="{{name}}">
                    </div>
                    <div class="uk-card-body">
                        <h3 class="uk-card-title">{{name}} {{tagline}}</h3>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>